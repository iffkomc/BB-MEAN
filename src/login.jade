- var location = ''
- var images = location + '../img'


<style>html,body{overflow:hidden; height: 100%;}</style>
.reg__global
.reg__header.container
    a.reg-header__logo(href="")
        img(src="#{images}/logo.svg", alt="")
    a.reg-header__about(href="#/about") About us
    a.reg-header__login(href="#/signup") Sign up

.reg__info
    h2
        img(src="#{images}/logo-w.svg", alt="Burbl")
        small Find out who like your style!
    ul
        li Share your daily looks
        li Compete with friends
        li Vote for their style
        li Become a favourite

.reg__box
    a.reg__logo(href="")
        img(src="#{images}/logo-w.svg", alt="")
    h1 Log in
    form(action="/login", method="POST")
        input(type="text", ng-model="user.username" name="login", placeholder="Username", required, autofocus)
        div.pass-block(ng-init="isVisiblePass = false")
            input(type="password", ng-show="!isVisiblePass", ng-model="user.password", class="password-enter" name="password", placeholder="Password", required)
            input(type="text", ng-show="isVisiblePass", ng-model="user.password", class="password-enter" name="password", placeholder="Password", required)
            a.show-pass(href="" ng-click="isVisiblePass = !isVisiblePass")
                i.hide-pass
            p(style="color: #ff3636") {{ message }}

        //input(type="image" src="")
        .reg__forgot
            a(href="#/forgot") Forgot your password?
        .log__req.cf
            a.btn-reg.btn-req__signin.active(ng-click="login()") Log in
            a.btn-reg.btn-req__reg.tablet-hide(href="#/signup") Sign up
        .log__social
            h4.tablet-hide Log in with:
            h4 Log in with social networks
            ul.cf
                li
                    a(href="/auth/vkontakte")
                        i.vk
                li
                    a(href="/auth/facebook")
                        i.fb
                li
                    a(href="/auth/twitter")
                        i.tw
                //li
                //    a(href="/auth/instagram")
                //        i.instagram
